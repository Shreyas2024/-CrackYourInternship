Approach:1 - Naive

class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
        int res=0;
        for(int i=0;i<nums.size();i++){
            int sum=0;
            for(int j=i;j<nums.size();j++){
                sum+=nums[j];
                if(sum%k==0) res++;
            }
        }
        return res;
    }
};

Approach:2 - Hash Map with Prefix Sum

class Solution {
public:
    int subarraysDivByK(vector<int>& nums, int k) {
       unordered_map<int, int> m;
    int cnt = 0, currSum = 0;
    for (int i : nums)
    {
        currSum += i;
        int rem = currSum % k;
        if (rem < 0)
            rem += k;
        
        if (rem == 0)
            cnt++;
        
        if (m.find(rem) != m.end())
            cnt += m[rem];
        
        m[rem]++;
    }
    return cnt;
    }
};
