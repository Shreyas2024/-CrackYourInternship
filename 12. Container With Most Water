Approach:1 - Two Pointer Approch

class Solution 
{
public:
    int maxArea(vector<int>& height) 
    {
        int left = 0;
        int right = height.size() - 1;
        int max = 0;
        int area = 0;
        while(left <= right)
        {
            area = min(height.at(left), height.at(right)) * (right -left);
            if(area > max)
                max = area;
            if(height.at(left) < height.at(right))
                left++;
            else if(height.at(left) > height.at(right))
                right--;
            else//if equal
            {
                left++;
                right--;
            }
        }
        return max;
    }
};
